<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MAUI1.User"
             x:Class="MAUI1.User.UserAccountPage"
             Title="UserAccountPage">
    <ContentPage.BindingContext>
        <local:UserVM></local:UserVM>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Button Text="SendImage" Command="{Binding SelectImageCommand}"></Button>
        <Image Source="{Binding SelectedImage}" HeightRequest="64" WidthRequest="64" Aspect="AspectFill" HorizontalOptions="Start"></Image>
        <Button Text="ReceiveImage" Command="{Binding TestCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>