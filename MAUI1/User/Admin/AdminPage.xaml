<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MAUI1.User.Admin"
             x:Class="MAUI1.User.Admin.AdminPage"
             Title="AdminPage">
    <VerticalStackLayout>
        <Button Text="TEST" Command="{Binding Test}"></Button>
        <ListView ItemsSource="{Binding Users}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout>
                            <Label Text="{Binding UserFullName}"></Label>
                            <Label Text="{Binding UserPhoneNumber}"></Label>
                            <Label Text="{Binding UserAccountType}"></Label>
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>