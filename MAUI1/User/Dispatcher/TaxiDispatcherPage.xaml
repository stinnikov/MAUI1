<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             xmlns:local="clr-namespace:MAUI1.User.Dispatcher"
             x:Class="MAUI1.User.Dispatcher.TaxiDispatcherPage"
             Title="TaxiDispatcherPage">
    <ContentPage.BindingContext>
        <local:TaxiDispatcherViewModel x:Name="dvm"></local:TaxiDispatcherViewModel>
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <mapsui:MapView x:Name="mapView"></mapsui:MapView>
        <ListView x:Name="ClientList" Grid.Row="1" ItemsSource="{Binding Collection}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout HorizontalOptions="Fill" Orientation="Horizontal">
                            <Image Source="{Binding ImageSource}" WidthRequest="30" HeightRequest="30" />
                            <Label Text="{Binding Client.Name}" VerticalTextAlignment="Center" Margin="5,0,0,0" />
                            <Button Command="{Binding Source={RelativeSource AncestorType={x:Type local:TaxiDispatcherViewModel}}, Path=ShowClientPin}" CommandParameter="{Binding .}"></Button>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>